<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <style>
        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            text-align: center;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
        }
        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <h1>Users for Role: <%= role.charAt(0).toUpperCase() + role.slice(1) %></h1>

    <% if (users.length > 0) { %>
        <!-- Table to Display User Details -->
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.name %></td>
                        <td><%= user.phone %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    <% } else { %>
        <!-- Message When No Users Found -->
        <p>No users found for the selected role.</p>

        <!-- Go Back to Role Selection -->
        <form action="/admin/viewusers" method="post">
            <input type="hidden" name="admindata" value='<%= JSON.stringify(admindata) %>' />
            <button type="submit">Choose Another Role</button>
        </form>
    <% } %>

    <!-- Go Back to Dashboard -->
    <form action="/admin/dashboard" method='post'>
        <input type='hidden' name='admindata' value='<%= JSON.stringify(admindata) %>' />
        <button type='submit'>Go Back to Dashboard</button>
    </form>

</body>
</html>
