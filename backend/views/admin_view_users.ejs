<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users | Hospital Management System</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1000px;
            margin: 30px auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #3498db; /* Blue header */
            color: white;
        }
        tr:hover {
            background-color: #f4f4f4; /* Light hover effect */
        }
        button {
            background-color: #3498db; /* Blue for buttons */
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }
        button:hover {
            background-color: #2980b9; /* Darker blue on hover */
        }
        p {
            text-align: center;
            color: #e74c3c; /* Red for no users message */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Users for Role: <%= role.charAt(0).toUpperCase() + role.slice(1) %></h1>

        <% if (users.length > 0) { %>
            <!-- Table to Display User Details -->
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.name %></td>
                            <td><%= user.phone %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

        <% } else { %>
            <!-- Message When No Users Found -->
            <p>No users found for the selected role.</p>

            <!-- Go Back to Role Selection -->
            <form action="/admin/viewusers" method="post">
                <input type="hidden" name="admindata" value='<%= JSON.stringify(admindata) %>' />
                <button type="submit">Choose Another Role</button>
            </form>
        <% } %>

        <!-- Go Back to Dashboard -->
        <form action="/admin/dashboard" method='post'>
            <input type='hidden' name='admindata' value='<%= JSON.stringify(admindata) %>' />
            <button type='submit'>Go Back to Dashboard</button>
        </form>
    </div>
</body>
</html>
