<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard | Hospital Management System</title>
</head>
<body>
    <%- include("header_logout.ejs") %>
    <div class="container">
        <h1 class="header">HMS</h1>
        <div class="content">
            <h2>Welcome, <%= patientdata.name ? patientdata.name : "Patient" %></h2>

            <form action="/patient/appointment" method="post">
                <input type="hidden" name="patientdata" value="<%= JSON.stringify(patientdata) %>">
                <button type="submit">View Appointments</button>
            </form>

            <form action="/patients/medical/records" method="post">
                <input type="hidden" name="patientdata" value="<%= JSON.stringify(patientdata) %>">
                <button type="submit">View Medical Records</button>
            </form>
        </div>
    </div>
    <%- include("footer.ejs") %>
</body>
</html>
