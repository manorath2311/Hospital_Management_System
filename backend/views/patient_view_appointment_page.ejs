<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Appointments</title>
    <style>
        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            text-align: center;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
        }
        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <%- include("header_logout.ejs") %>

    <div style="text-align: center;">
        <!-- Go Back Button -->
        <form action="/patients/dashboard" method="post">
            <input type="hidden" name="patientdata" value='<%= JSON.stringify(patientdata) %>'>
            <button type="submit">Go Back</button>
        </form>

        <h2>Your Appointments</h2>

        <% if (noAppointments) { %>
            <p>No Appointments Found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Appointment Date</th>
                        <th>Time</th>
                        <th>Doctor Name</th>
                        <th>Specialization</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(appointment => { %>
                        <tr>
                            <td><%= appointment.date ? new Date(appointment.date).toISOString().split('T')[0] : "N/A" %></td>
                            <td><%= appointment.time ? appointment.time : "N/A" %></td>
                            <td><%= appointment.doctor_name ? appointment.doctor_name : "N/A" %></td>
                            <td><%= appointment.specialization ? appointment.specialization : "N/A" %></td>
                            <td><%= appointment.status ? appointment.status : "N/A" %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>

    <%- include("footer.ejs") %>
</body>
</html>
